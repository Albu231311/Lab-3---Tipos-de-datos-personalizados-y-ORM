
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: lab3_app
    ports:
      - "8080:8000"
    volumes:
      - ./app:/var/www/html
    depends_on:
      - db
    env_file:
      - .env

  db:
    image: postgres:14
    container_name: lab3_database
    ports:
      - "5433:5432"
    environment:
      POSTGRES_DB: lab3
      POSTGRES_USER: calburez
      POSTGRES_PASSWORD: Sportnicho1
    volumes:
      - pgdata:/var/lib/postgresql/data
    env_file:
      - .env

volumes:
  pgdata: